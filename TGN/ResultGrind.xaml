<Window x:Class="TGN.ResultGrind" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Result Gring Rune" Height="114" Width="177" ResizeMode="NoResize" WindowStartupLocation="Manual">
    <Grid>
        <Label Content="Attempts:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="76" Margin="24,0,0,0" FontSize="15"/>
        <Label Name="AttemptsGrind" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="72" Margin="108,5,-9,0" FontSize="15"/>

        <Label Content="Successful:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="84" Margin="24,26,0,0" FontSize="15" BorderBrush="Black" Foreground="#FF3BA200"/>
        <Label Name="AttemptsSuccess" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Margin="108,26,-1,0" FontSize="15" Foreground="#FF02B902"/>

        <Label Content="Failed:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="108" Margin="24,53,0,0" FontSize="15" Foreground="#FFD80B0B"/>
        <Label Name="AttemptsFail" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Margin="108,53,-1,0" FontSize="15" Foreground="Red"/>

    </Grid>
</Window>
